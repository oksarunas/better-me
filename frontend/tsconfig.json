{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext", // Change to ESNext for modern module support
    "jsx": "react-jsx", // Enables JSX support
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src", // Set baseUrl to src
    "paths": {
      "@/*": ["*"] // Simplified path resolution
    },
    "moduleResolution": "Node" // Optional: use Node resolution strategy
  }
}
